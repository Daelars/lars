---
const response = await fetch("http://localhost:4321/api/files/get");
const files = await response.json();
---

<html>
  <head>
    <title>Files List</title>
  </head>
  <body>
    <h1>Files</h1>
    <ul>
      {files.map((file) => <li>{file.name}</li>)}
    </ul>

    <script type="module">
      async function addFile(fileName) {
        const response = await fetch("/api/files/post", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ name: fileName }),
        });
        return response.json();
      }

      async function updateFile(fileId, newDetails) {
        const response = await fetch("/api/files/put", {
          method: "PUT",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ id: fileId, ...newDetails }),
        });
        return response.json();
      }

      async function deleteFile(fileId) {
        const response = await fetch("/api/files/delete", {
          method: "DELETE",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ id: fileId }),
        });
        return response.json();
      }

      // Example usage
      document.addEventListener("DOMContentLoaded", () => {
        // Attach these functions to your form submissions or button clicks as needed
      });
    </script>
  </body>
</html>
