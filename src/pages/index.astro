---
// src/pages/index.astro
// Make sure to replace '/api/files' with the correct path to your API endpoint
const response = await fetch(`${Astro.request.url.origin}/api/files_api`);
const files = await response.json();
---

<html>
<head>
    <title>Files List</title>
</head>
<body>
    <h1>Files</h1>
    <ul>
        {files.map(file => (
            <li key={file.id}>
                <h2>{file.name}</h2>
                <!-- Add more details you want to display about each file -->
            </li>
        ))}
    </ul>
</body>
</html>